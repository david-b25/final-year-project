datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

generator client {
  provider = "prisma-client-js"
}

model Site {
  userId            String
  id                String   @id @default(cuid())
  name              String?
  description       String?  @db.Text
  logo              String?  @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/JRajRyC-PhBHEinQkupt02jqfKacBVHLWJq7Iy.png") @db.Text
  image             String?  @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/hxfcV5V-eInX3jbVUhjAt1suB7zB88uGd1j20b.png") @db.Text
  imageBlurhash     String?  @default("data:image/png;base64,") @db.Text
  subdomain         String?  @unique
  customDomain      String?  @unique
  domain_uuid       String?  @unique
  message404        String?  @default("Blimey! You've found a page that doesn't exist.") @db.Text
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  titleTag          String?  
  metaDescription   String?  @db.Text
  favicon           String?  @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/JRajRyC-PhBHEinQkupt02jqfKacBVHLWJq7Iy.png") @db.Text
  openGraph         String?  @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/hxfcV5V-eInX3jbVUhjAt1suB7zB88uGd1j20b.png") @db.Text
  openGraphBlurhash String?  @default("data:image/png;base64,") @db.Text

  savedNavbar       String   @default("[]")
  publishedNavbar   String   @default("[]")

  savedFooter       String   @default("[]")
  publishedFooter   String   @default("[]")

  font              String   @default("font-cal")
  paragraphFont     String   @default("font-cal")

  buttonRadius      String   @default("none")
  componentRadius   String   @default("none")

  
  sitepages         SitePage[]
  pageTypes         PageType[]
  contactForms      ContactForm[]
  formSubmissions   FormSubmission[]
  assets            Asset[]
}

model PageType {
  userId      String
  id          String   @id @default(cuid())
  title       String?  @unique
  slug        String   @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  site        Site?    @relation(fields: [siteId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  siteId      String?

  sitePages SitePage[]
}

model SitePage {
  userId            String
  id                String   @id @default(cuid())
  title             String?  @db.Text
  description       String?  @db.Text
  savedContent      String   @default("[]")
  publishedContent  String   @default("[]")
  slug              String   @default(cuid())
  image             String?  @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/hxfcV5V-eInX3jbVUhjAt1suB7zB88uGd1j20b.png") @db.Text
  imageBlurhash     String?  @default("data:image/png;base64,") @db.Text
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  isHomePage        Boolean  @default(false)
  published         Boolean  @default(false)
  site              Site?    @relation(fields: [siteId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  siteId            String?

  titleTag          String?  
  metaDescription   String?  @db.Text
  openGraph         String?  @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/hxfcV5V-eInX3jbVUhjAt1suB7zB88uGd1j20b.png") @db.Text
  openGraphBlurhash String?  @default("data:image/png;base64,") @db.Text

  pageTypeId        String?
  pageType          PageType? @relation(fields: [pageTypeId], references: [id])

  @@unique([slug, siteId])
  @@index([siteId])
}


model ContactForm {
  userId      String
  id          String   @id @default(cuid())
  title       String?  @db.Text
  email       String? @unique

  createdAt   DateTime @default(now())

  FormSubmissions FormSubmission[]

  site              Site?    @relation(fields: [siteId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  siteId            String?
  
  @@unique([siteId])
  @@index([siteId])

}

model FormSubmission {
  id                String   @id @default(cuid())
  createdAt         DateTime @default(now())
  
  submissionEmail   String?  @db.Text
  submissionName    String?  @db.Text
  submissionMessage String?  @db.Text

  site              Site?    @relation(fields: [siteId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  siteId            String?

  contactForm       ContactForm?    @relation(fields: [contactFormId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  contactFormId     String?
}


model Asset {
  id            String   @id @default(cuid())
  
  image         String?  @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/hxfcV5V-eInX3jbVUhjAt1suB7zB88uGd1j20b.png") @db.Text
  imageBlurhash String?  @default("data:image/png;base64,") @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  site          Site?    @relation(fields: [siteId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  siteId        String?
  userId        String

  @@index([siteId])
  @@index([userId])
}


